doctype html
html
	head
		title= "Node JS"
		link(href='/css/main.css', rel='stylesheet')
	body
		h2= title
		
		if username
			h3 Hello : #{username}
			div
				form(name='logout', method='POST', action='/logout')
					input(type='submit', value='Log out')
		else
			div
				a(href='/signup') Sign up
			div
				a(href='/login') Log in